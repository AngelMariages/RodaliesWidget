<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/widgetBg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:paddingBottom="@dimen/padding">

        <include layout="@layout/widget_buttons" />

        <include layout="@layout/table_titles_one_transfer" />

        <ListView
            android:id="@+id/scheduleListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/data_background"
            android:divider="@color/data_separator"
            android:dividerHeight="2dp"
            android:textAlignment="center" />
    </LinearLayout>
</FrameLayout>