<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:color/holo_orange_dark"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/slide_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Com configurar un Giny(Widget)"
        android:textColor="@color/data_text"
        android:textSize="@dimen/slide_title"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:text="Als dispositius Android existeixen aquests tipus de ginys que ens permeten veure informació actualitzada d'algun servei, com ara el de Rodalies.\n\nPer tal d'afegir-lo nomes has d'anar a la pantalla principal i mantenir polsat el dit durant uns segons. Un menú apareixerà per tal d'afegir el giny.\n\nTens un exemple a la següent pantalla."
        android:textColor="@android:color/white"
        android:textSize="@dimen/slide_desc"/>

</LinearLayout>