<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:color/holo_orange_dark"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/slide_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Benvingut a Rodalies Widget"
        android:textColor="@color/data_text"
        android:textSize="@dimen/slide_title"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:text="Aquesta aplicació és un giny(widget).\nSi no saps com fer-la servir t'animem a que segueixis aquest tutorial.\n\nPrem saltar per accedir directament a la configuració."
        android:textColor="@android:color/white"
        android:textSize="@dimen/slide_desc"/>

</LinearLayout>